            // },
            sqlParams: {
                sqlId: 'sqlCodeAuditExport',
                params: {
                    // filter: mainTableFilter,
                    orderBy: 'saveTimeStamp desc'
                }
            },
            dtParams: {
                dtConfig: 'dtConfigFull',
                columns: [{
                    data: 'BPID'
                }, {
                    data: 'BTID'
                }, {
                    data: 'BTVersion'
                }, {
                    data: 'codeType'
                }, {
                    data: 'taskStaff'
                }, {
                    data: 'codeAuditor',
                }, {
                    data: 'result',
                }, {
                    data: 'remark',
                }, {
                    data: 'saveDate',
                }],
                buttons: [
                    'excel'
                ],
            },

        })












    });
</script>