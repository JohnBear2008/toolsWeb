<!-- 加载foil外框架 -->
<% layout(locals.global.theme_layout_dir+'/master.ejs') -%>

<!-- 定义html元素 -->
<div class="rpContent">

    <!-- 按钮：用于打开模态框 -->

    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="page-header">
                <h1>信息管理-代码审核</h1>
            </div>
        </div>
    </div>





    <div class="row clearfix">
        <div class="col-md-12 column">


            <!-- 定义基础模块数据表 -->
            <table id="ppm_bills_codeaudit" class=" table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>计划单号</th>
                        <th>任务单号</th>
                        <th>任务单版本</th>
                        <th>任务类型</th>
                        <th>任务人</th>
                        <th>审核人</th>
                        <th>审核结果</th>
                        <th width="300px">备注</th>
                        <th>审核日期</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>





    <!-- 模态框（Modal） -->
    <div class="modal fade" id="ppm_bills_codeauditModal" tabindex="-1" role="dialog" aria-hidden="true">

        <div class="modal-dialog" style="width: 65%;">

            <!-- 按钮触发模态框 -->
            <button class="btn btn-primary" data-toggle="modal" data-target="#ppm_bills_codeauditModal"
                id="ppm_bills_codeauditModalOpen" style="display: none;">
                开始演示模态框
            </button>
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">
                        产品信息
                    </h4>


                </div>
                <div class="modal-body">




                    <!-- 表单面板 -->
                    <div class="panel panel-default">
                        <div class="panel-body">


                            <form class="form-horizontal" role="form" id='ppm_bills_codeauditForm'>

                                <input id="ppm_bills_codeauditForm-DBID" type="hidden" value="">

                                <div class="form-group">
                                    <label class="col-sm-1 control-label">原件编号</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="ppm_bills_codeauditForm-partId" type="text"
                                            value="该输入框获得焦点...">
                                    </div>

                                    <label class="col-sm-1 control-label">单价</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="ppm_bills_codeauditForm-price" type="text"
                                            value="该输入框获得焦点...">
                                    </div>

                                </div>


                                <div class="form-group">

                                    <label class="col-sm-1 control-label">创建人</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="ppm_bills_codeauditForm-creater" type="text"
                                            value="该输入框获得焦点...">
                                    </div>

                                    <label class="col-sm-1 control-label">有效性</label>
                                    <div class="col-sm-5">
                                        <select id="ppm_bills_codeauditForm-effective" class="selectpicker"
                                            data-dropup-auto="true">
                                            <option>是</option>
                                            <option>否</option>
                                        </select>

                                    </div>

                                </div>



                            </form>
                        </div>
                    </div>



                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal"
                        id="ppm_bills_codeauditModalClose">关闭
                    </button>
                    <!-- <button type="button" class="btn btn-primary" id="ppm_bills_codeauditSave">
                        保存
                    </button> -->
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>


</div>







<script type="text/javascript">
    $(document).ready(function () {


        //加载表格
        loadBillDataTable({
            elementId: 'ppm_bills_codeaudit',
            // sqlParams: {
