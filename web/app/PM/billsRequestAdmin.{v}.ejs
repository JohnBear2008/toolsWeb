<script type="text/javascript">
    //主表加载数据函数;

    const loadBillMainTable = async () => {
        //r-模式确定
        //显示过滤模式
        switch (true) {
            case mainTableFilter === "maker='" + sessionName + "' or auditor='" + sessionName + "'":
                $('#btnFilterRelated').addClass('active');
                $('#btnFilterUndone').removeClass('active');
                $('#btnFilterAll').removeClass('active');
                break;
            case mainTableFilter === "status<>'已完结'":
                $('#btnFilterRelated').removeClass('active');
                $('#btnFilterUndone').addClass('active');
                $('#btnFilterAll').removeClass('active');
                break;
            case mainTableFilter === '':
                $('#btnFilterRelated').removeClass('active');
                $('#btnFilterUndone').removeClass('active');
                $('#btnFilterAll').addClass('active');
                break;
            default:
                $('#btnFilterRelated').removeClass('active');
                $('#btnFilterUndone').removeClass('active');
                $('#btnFilterAll').removeClass('active');
                break;
        }



        //r-初始化主表
        loadBillDataTable({
            elementId: 'ppm_bills_request',
            sqlParams: {
                sqlId: 'sqlRequestBills',
                params: {
                    filter: mainTableFilter,
                    orderBy: 'billSaveTimeStamp desc'
                }
            },
            dtParams: {
                columns: [{
                    data: 'BPID',
                }, {
                    data: 'CTRName',
                }, {
                    data: 'topic',
                }, {
                    data: 'maker',
                }, {
                    data: 'makeDate',
                }, {
                    data: 'limitDate',
                }, {
                    data: 'auditor',
                }, {
                    data: 'feedBack',
                }, {
                    data: 'status',
                }]
            }
        })

        //清空选项值
        $('.dataTables_filter input').val('')

        //自定义样式调整
        $('.dataTables_filter input').attr({
            'name': 'search',
            'size': 45
        });
        $('.dataTables_filter input').attr({
            'name': 'search',
            'placeholder': '可用表属性过滤搜索'
        });



        //解绑原事件
        $('#ppm_bills_request tbody').unbind();


        //d-定义主表双击事件
        $('#ppm_bills_request tbody').on('dblclick', 'tr', async function () {
            //设定选中
            let table = $('#ppm_bills_request').DataTable();
            table.$('tr.selected').removeClass('selected');
            $(this).addClass('selected');
            let dataSelect = table.row('.selected').data();

            mainTableData = dataSelect; //刷新全局主表对象数据

            // console.log('mainTableData', mainTableData);

            //初始化并填写form内inputs
            initAndFillFormInputs({
                formId: 'ppm_bills_requestForm',
                params: dataSelect
            })



            //如存在file属性,对其单独处理生成下载链接
            // alert(JSON.stringify(dataSelect))
            if (dataSelect.files) {
                let filesLink = getFilesUrl(dataSelect.files)
                $('#files').html(filesLink);
            }

            //r-显示控制
            $('#feedBackRow').show()

            if (['待审核', '审核驳回', ''].includes(dataSelect.status)) {
                $('#saveRequestBtn').show()
            } else {
                $('#saveRequestBtn').hide()
            }


            if (dataSelect.auditor === sessionName && dataSelect.status === '待审核') {
                $('#auditRequestBtn').show()
                $('#rejectRequestBtn').show()
            } else {
                $('#auditRequestBtn').hide()
                $('#rejectRequestBtn').hide()
            }

            //打开面板
            $('#ppm_bills_requestModal').modal('show');

        });
    }


    $(document).ready(function () {

        //定义全局变量,当前用户名
        sessionName = "<%-locals.session.yjUser.Name%>";
        //定义主表全局变量临时数据对象
        mainTableData = {};

        //过滤器
        mainTableFilter = '';

        var undone = getQueryString("undone");

        switch (undone) {
            case "unAudit":
                mainTableFilter = "auditor ='" + sessionName + "' AND status='待审核'"
                break;

            default:
                mainTableFilter = "maker='" + sessionName + "' or auditor='" + sessionName + "'"
                break;
        }



        loadBillMainTable()

        //按钮-过滤与我相关
        $('#btnFilterRelated').click(async function () {

            mainTableFilter = "maker='" + sessionName + "' or auditor='" + sessionName + "'"
            loadBillMainTable()
        })

        //按钮-过滤未完结
        $('#btnFilterUndone').click(async function () {

            mainTableFilter = "status<>'已完结'"
            loadBillMainTable()
        })

        //按钮-过滤全部
        $('#btnFilterAll').click(async function () {

            mainTableFilter = ""
            loadBillMainTable()
        })

        //新增按钮
        $('#newRequestBtn').click(function () {
            //r-打开面板
            $('#ppm_bills_requestModal').modal('show');

            //d-清空表单
            clearFormInputs({
                formId: 'ppm_bills_requestForm'
            })

            //r-设定初始值
            $("#ppm_bills_requestForm-PLDArea").selectpicker('val', '大港');
            $("#ppm_bills_requestForm-orderFrom").selectpicker('val', '邮件');
            $("#ppm_bills_requestForm-billClass").selectpicker('val', '量产');
            $("#ppm_bills_requestForm-orderFromDep").selectpicker('val', '客户订单');
            $("#ppm_bills_requestForm-applyDate").val(currentDate());
            $("#ppm_bills_requestForm-limitDate").val(getIntervalDate(currentDate(), 3));



            //r-部件显示控制

            $('#feedBackRow').hide()

            $('#uploadToolDiv').show()
            $('#getAuditorBtn').show()
            $('#saveRequestBtn').show()
            $('#auditRequestBtn').hide()
            $('#rejectRequestBtn').hide()



        })

        //获取审核人按钮
        $('#getAuditorBtn').click(async function () {

            //c-检查参数
            let CTRNameVal = $('#ppm_bills_requestForm-CTRName option:selected').val()
            let MHENameVal = $('#ppm_bills_requestForm-MHEName option:selected').val()
            let modelDVal = $('#ppm_bills_requestForm-modelD option:selected').val()
            let modelHVal = $('#ppm_bills_requestForm-modelH option:selected').val()

            if (!CTRNameVal && !MHENameVal) {
                alert('客户,机型至少选则一项,请检查')
                return
            }

            if (!modelDVal && !modelHVal) {
                alert('系统DSP,系统HMI至少选则一项,请检查')
                return
            }

            let CTRName = $('#ppm_bills_requestForm-CTRName option:selected').text()
            let MHEName = $('#ppm_bills_requestForm-MHEName option:selected').text()
            let modelD = $('#ppm_bills_requestForm-modelD option:selected').text()
            let modelH = $('#ppm_bills_requestForm-modelH option:selected').text()

            let ModelName = "";
            if (modelHVal) {
                ModelName = modelH
            }
            if (modelDVal) {
                ModelName = modelD
            }

            let filter = ''
            if (CTRNameVal) {
                filter = filter + ' and CTRName="' + CTRName + '"';
            }

            if (MHENameVal) {
                filter = filter + ' and MHEName="' + MHEName + '"';
            }

            if (ModelName) {
                filter = filter + ' and ModelName="' + ModelName + '"';
            }

            if (filter) {
                filter = filter.substring(4, filter.length);
            }

            let rs = await getDataBySql({
                sql: 'getBindAuditor',
                params: {
                    filter: filter,
                    ordorBy: 'saveTimeStamp desc'
                }
            })

            // console.log('rs', rs);

            let auditor = '谢丽君';
            if (rs.length > 0) {
                auditor = rs[0].auditor;
            }

            $("#ppm_bills_requestForm-auditor").selectpicker('val', auditor);



        })

        //提交按钮
        $('#saveRequestBtn').click(async function () {

            //c-账号检测
            let table = $('#ppm_bills_request').DataTable();
            let dataSelect = table.row('.selected').data();
            if (dataSelect) {
                if (sessionName !== dataSelect.maker && sessionName !== dataSelect.auditor) {
                    alert('当前账号非此单申请人或审核人,无法修改!')
                    return
                }
            }

            //c-检查必填项
            if (!$('#ppm_bills_requestForm-modelD option:selected').val() && !$(
                    '#ppm_bills_requestForm-modelH option:selected').val()) {
                alert('系统DSP,系统HMI至少选一项,请检查')
                return
            }

            if (!$("#ppm_bills_requestForm-topic").val()) {
                alert('修改主题必填')
                return
            }

            if (!$('#ppm_bills_requestForm-auditor option:selected').val()) {
                alert('审核人必填,如不确定,可用系统指定功能,请检查!')
                return
            }


            //c-检查状态
            let status = $('#ppm_bills_requestForm-status').text()
            if (!['待审核', '审核驳回', ''].includes(status)) {
                alert('该订单状态无法修改')
                return
            }

            //c-重置审核状态确认
            if (status === '审核驳回') {
                if (!confirm('该申请单已经审核驳回,保存将重新提交审核,再次确认!')) {
                    return
                }
            }


            //d-获取表单数据

            let requestBillData = getPostFormData({
                formId: 'ppm_bills_requestForm'
            })
            console.log('requestBillData', requestBillData);


            //d-添加附件信息
            let filesArr = getFilesJson();
            requestBillData.data[0].files = filesArr;

            //d-调整数据

            if (!requestBillData.data[0].DBID) {
                delete requestBillData.data[0].DBID
            }

            if (!requestBillData.data[0].maker) {
                requestBillData.data[0].maker = sessionName
            }

            requestBillData.data[0].makeDate = currentDate()



            if (!requestBillData.data[0].status || requestBillData.data[0].status === '审核驳回') {
                requestBillData.data[0].feedBack = ''
                requestBillData.data[0].status = '待审核'
            }



            //d-保存单据
            let r1 = await postDBData({
                sql: 'replace',
                params: requestBillData
            })

            if (r1.affectedRows > 0) {
                alert('保存成功!')
            } else {
                alert('出现错误!')
            }

            //r-重载表格
            loadBillMainTable()


            //r-关闭modal
            $('#ppm_bills_requestModal').modal('hide');

        })


        //审核通过按钮
        $('#auditRequestBtn').click(async function () {

            //c-检查审核人
            let auditor = $('#ppm_bills_requestForm-auditor option:selected').val();
            if (sessionName !== auditor) {
                alert('您不是此需求单的审核人,无法审核!')
                return
            }

            //c-审核再确认
            if (!confirm('审核后此单由您负责处理,将自动生成计划单,再次确认!')) {
                return
            }


            //d-添加绑定关系 

            let CTRNameVal = $('#ppm_bills_requestForm-CTRName option:selected').attr(
                'data-tokens')
            let MHENameVal = $('#ppm_bills_requestForm-MHEName option:selected').attr('data-tokens')
            let modelDVal = $('#ppm_bills_requestForm-modelD option:selected').attr('data-tokens')
            let modelHVal = $('#ppm_bills_requestForm-modelH option:selected').attr('data-tokens')
            let staffVal = $('#ppm_bills_requestForm-auditor option:selected').attr('data-tokens')

            // alert(staffVal)
            // return

            let CTRName = $('#ppm_bills_requestForm-CTRName option:selected').text()
            let MHEName = $('#ppm_bills_requestForm-MHEName option:selected').text()
            let modelD = $('#ppm_bills_requestForm-modelD option:selected').text()
            let modelH = $('#ppm_bills_requestForm-modelH option:selected').text()
            let staffName = $('#ppm_bills_requestForm-auditor option:selected').text()

            let ModelVal = ""
            let ModelName = "";
            if (modelHVal) {
                ModelVal = modelHVal
                ModelName = modelH
            }
            if (modelDVal) {
                ModelVal = modelDVal
                ModelName = modelD
            }

            let addResult = await autoAddBindAuditor({
                CTRVal: CTRNameVal,
                CTRName: CTRName,
                MHEVal: MHENameVal,
                MHEName: MHEName,
                ModelVal: ModelVal,
                ModelName: ModelName,
                staffVal: staffVal,
                staffName: staffName
            })
            if (!addResult) {
                alert(addResult)
                return
            }

            //d-生成计划单

            let PLDNumRS = await getDataBySql({
                sql: 'getPLDNum'
            })
            console.log('PLDNumRS', PLDNumRS);

            let PLDNum = PLDNumRS[0].PLDNum + 1

            if (PLDNum < 9) {
                PLDNum = "0" + PLDNum;
            }

            //定义BPID单号标识符;
            let charA, charB, charC
            switch ($('#ppm_bills_requestForm-PLDArea option:selected').val()) {
                case '大港':
                    charA = 'D';
                    break;
                case '虎门':
                    charA = 'H';
                    break;
                case '台湾':
                    charA = 'T';
                    break;
                default:
                    break;
            }

            switch ($('#ppm_bills_requestForm-orderFrom option:selected').val()) {
                case '邮件':
                    charB = 'M';
                    break;
                case '电话':
                    charB = 'T';
                    break;
                case '传真':
                    charB = 'F';
                    break;
                case '微信':
                    charB = 'W';
                    break;
                case '工具':
                    charB = 'P';
                    break;
                default:
                    break;
            }

            switch ($('#ppm_bills_requestForm-orderFromDep option:selected').val()) {
                case '客户订单':
                    charC = 'A';
                    break;
                case '其他部门':
                    charC = 'B';
                    break;
                case '工程单位':
                    charC = 'C';
                    break;
                case '公司预算或经营会议':
                    charC = 'D';
                    break;
                default:
                    break;
            }


            let BPID = "P" + dateFormat(currentDate(), "yyyyMMdd") + PLDNum + "_" + charA + charB +
                "_" + charC;


            // alert(BPID)

            //d-生成计划单

            //d-获取计划单fileJson
            let newFileArr = []
            let oldFileArr = JSON.parse(getFilesJson())
            for (const n of oldFileArr) {
                newFileArr.push({
                    fileName: n.name,
                    fileKey: n.key
                })
            }
            let newFileJson = JSON.stringify(newFileArr)

            let PLDData = {
                tableId: 'ppm_bills_plan',
                data: [{
                    "BPID": BPID,
                    "CTRName": $('#ppm_bills_requestForm-CTRName option:selected')
                        .val(),
                    "topic": $("#ppm_bills_requestForm-topic").val(),
                    "detail": $("#ppm_bills_requestForm-detail").val().replace(
                        /\n|\r\n/g, '<br/>').replace(/'/g, '"'),
                    "PGEMaker": staffName,
                    "PLDArea": charA,
                    "orderFrom": charB,
                    "orderFromDep": charC,
                    "billClass": $('#ppm_bills_requestForm-billClass option:selected')
                        .text(),
                    "MHEName": $('#ppm_bills_requestForm-MHEName option:selected')
                        .val(),
                    "modelD": modelD,
                    "modelH": modelH,
                    // "OGNSystemVersion": $('#OGNSystemVersion').val(),
                    "applyDate": $('#ppm_bills_requestForm-applyDate').val(),
                    "limitDate": $('#ppm_bills_requestForm-limitDate').val(),
                    "maker": $('#ppm_bills_requestForm-maker').text(),
                    "makeDate": currentDate(),
                    "version": 0,
                    "files": newFileJson,
                    "auditor": staffName,
                    "auditDate": currentDate(),
                    "auditResult": 1,
                    "PLDStatus": 1,
                    // "auditOpinion": $('#ppm_bills_requestForm-auditOpinion').val().replace(
                    //     /\n|\r\n/g, '<br/>').replace(/'/g, '"'),
                    "WFStatus": 10
                }]
            }

            console.log('PLDData', PLDData);

            let PLDSaveResult = await postDBData({
                sql: 'replace',
                params: PLDData
            })

            if (!PLDSaveResult) {
                alert('生成计划单错')
                return
            }


            //d-审核
            let billData = {
                DBID: $('#ppm_bills_requestForm-DBID').val(),
                BPID: BPID,
                status: '审核通过'
            }

            let rs = await postDBData({
                sql: 'update',
                params: {
                    tableId: 'ppm_bills_request',
                    data: [billData],
                    key: 'DBID'
                }
            })

            if (rs.affectedRows > 0) {
                alert('审核成功!')
            } else {
                alert('审核失败!')
            }




            //r-重载表格
            loadBillMainTable()

            //r-关闭modal
            $('#ppm_bills_requestModal').modal('hide');

        })

        //审核驳回按钮
        $('#rejectRequestBtn').click(async function () {

            //c-检查审核人
