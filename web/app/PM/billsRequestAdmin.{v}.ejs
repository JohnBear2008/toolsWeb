                params: {
                    filter: 'status=1'
                }
            },
        })

        loadBootStrapSelector({
            elementId: 'ppm_bills_requestForm-modelD',
            sqlParams: {
                sql: 'getSytemSelector',
                params: {
                    filter: 'belong="DSP" and sort="APP"'
                }
            },
        })

