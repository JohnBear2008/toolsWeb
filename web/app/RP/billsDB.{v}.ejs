<% layout(locals.global.theme_layout_dir+'/master.ejs') -%>

<!-- 定义html元素 -->
<div class="rpContent">

    <!-- 按钮：用于打开模态框 -->

    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="page-header">
                <h1>工作流程-历史单据</h1>
            </div>
        </div>
    </div>





    <div class="row clearfix">
        <div class="col-md-12 column">

            <!-- 功能组按钮 -->
            <div class="well">
                <button id='btnTrack' type="button" class="btn btn-info">流程总览</button>
                <button id='btnFilter' type="button" class="btn btn-info">过滤器</button>
                <button id='btnReports' type="button" class="btn btn-info">报表</button>
            </div>



            <!-- 定义基础模块数据表 -->
            <table id="rp_billsDB" class=" table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>申请单号</th>
                        <th>客户简称</th>
                        <th>申请日期</th>
                        <th>完结日期</th>
                        <th>产品编号</th>
                        <th>维修结果</th>
                        <th>出货结果</th>
                        <th>是否结清</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>


        </div>
    </div>

    <!-- 模态框跟踪（Modal） -->
    <div class="modal fade" id="rp_billsDBModal" tabindex="-1" role="dialog" aria-hidden="true">

        <div class="modal-dialog" style="width: 65%;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">
                        表单详情
                    </h4>


                </div>
                <div class="modal-body">

                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h3 class="panel-title">维修需求单</h3>
                        </div>
                        <div class="panel-body">
                            <!-- 定义基础模块数据表 -->
                            <table id="rp_requestbills" class=" table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>申请单号</th>
                                        <th>送修时间</th>
                                        <th>客户编号</th>
                                        <th>客户简称</th>
                                        <th>区域</th>
                                        <th>国内外</th>
                                        <th>送修人</th>
                                        <th>送修方式</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>

                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h3 class="panel-title">维修记录单</h3>
                        </div>
                        <div class="panel-body">
                            <table id="rp_recordbills" class=" table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>申请单号</th>
                                        <th>产品编号</th>
                                        <th>产品描述</th>
                                        <th>是否返修</th>
                                        <th>是否紧急</th>
                                        <th>质保期内</th>
                                        <th>出厂编号</th>

                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>

                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h3 class="panel-title">维修出货单</h3>
                        </div>
                        <div class="panel-body">
                            <!-- 定义基础模块数据表 -->
                            <table id="rp_requestbills" class=" table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>申请单号</th>
                                        <th>送修时间</th>
                                        <th>客户编号</th>
                                        <th>客户简称</th>
                                        <th>区域</th>
                                        <th>国内外</th>
                                        <th>送修人</th>
                                        <th>送修方式</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>



                </div><!-- /.modal-content -->
            </div><!-- /.modal -->
        </div>


    </div>


    <!-- 模态框过滤（Modal） -->
    <div class="modal fade" id="filterModal" tabindex="-1" role="dialog" aria-hidden="true">

        <div class="modal-dialog" style="width: 65%;">


            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">
                        过滤器
                    </h4>
                </div>
                <div class="modal-body">

                    <div class="panel panel-info">
                        <div class="panel-body">
                            <form class="form-horizontal" role="form" id='rp_requestbillsForm'>

                                <input id="rp_requestbillsForm-DBID" type="hidden" value="">

                                <div class="form-group">
                                    <label class="col-sm-1 control-label">申请单号</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="rp_requestbillsForm-requestBillId" type="text"
                                            value="该输入框获得焦点...">
                                    </div>

                                    <label class="col-sm-1 control-label">送修时间</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="rp_requestbillsForm-requestDate" type="text"
                                            value="该输入框获得焦点...">
                                    </div>

                                </div>




                                <div class="form-group">
                                    <label class="col-sm-1 control-label">客户编号</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="rp_requestbillsForm-customerId" type="text"
                                            value="该输入框获得焦点...">
                                    </div>

                                    <label class="col-sm-1 control-label">客户简称</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="rp_requestbillsForm-shortName" type="text"
                                            value="该输入框获得焦点...">
                                    </div>


                                </div>

                                <div class="form-group">
                                    <label class="col-sm-1 control-label"></label>

                                    <div class="col-sm-5">
                                        <button type="button" class="btn btn-default">关闭
                                        </button>
                                        <button type="button" class="btn btn-primary" id="confirmFilter">
                                            确定
                                        </button>

                                    </div>


                                </div>


                            </form>

                        </div>
                    </div>


                </div><!-- /.modal-content -->
            </div><!-- /.modal -->
        </div>


    </div>


    <!-- 模态框报表（Modal） -->
    <div class="modal fade" id="reportsModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" style="width: 65%;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">
                        报表
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="panel panel-info">
                        <div class="panel-body">

                            <ul id="myTab" class="nav nav-tabs">
                                <li class="active">
                                    <a href="#home" data-toggle="tab">
                                        报表1
                                    </a>
                                </li>
                                <li><a href="#ios" data-toggle="tab">报表2</a></li>

                            </ul>
                            <div id="myTabContent" class="tab-content">
                                <div class="tab-pane fade in active" id="home">
                                    <p>报表1内容
                                    </p>
                                </div>
                                <div class="tab-pane fade" id="ios">
                                    <p>报表2内容</p>
                                </div>

                            </div>

                        </div>
                    </div>


                </div><!-- /.modal-content -->
            </div><!-- /.modal -->
        </div>


    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {


        //加载表格
        loadBillDataTable({
            elementId: 'rp_billsDB',
            sqlParams: {
                sqlId: 'sqlResponseBills',
                params: []
            },
            dtParams: {
                columns: [{
                        data: 'requestBillId',
                    },
                    {
                        data: 'recordBillId'
                    }, {
                        data: 'responseBillId'
                    }, {
                        data: 'shortName',
                    }, {
                        data: 'productId',
                    }, {
                        data: 'repairResult',
                    }, {
                        data: 'isSended',
                    }, {
                        data: 'isFullPay',
                    },
                ],
            }
        })

        let table = $('#rp_billsDB').DataTable();


        //定义主表双击事件
        $('#rp_billsDB tbody').on('dblclick', 'tr', function () {

            table.$('tr.selected').removeClass('selected');
            $(this).addClass('selected');
            let dataSelect = table.row('.selected').data();
            //清空Form原有数据
            initFormInputs({
                elementId: 'rp_billsDBForm'
            })
            //填写div匹配数据
            fillDivInputs({
                elementId: 'rp_billsDB',
                params: dataSelect
            })
            //打开面板
            $('#btnTrack').click();

        });


        // //加载表格
        // loadBillDataTable({
        //     elementId: 'rp_recordbills',
        //     dtParams: {
        //         dtConfig: 'dtConfigData',
        //         data: [],
        //         columns: [{
        //             data: 'recordBillId'
        //         }, {
        //             data: 'productId',
        //         }, {
        //             data: 'repairResult',
        //         }, {
        //             data: 'repairTotalFee',
        //         }],
        //     }
        // })

        // let subTable = $('#rp_recordbills').DataTable();


        $('#btnTrack').click(function () {

            let rowsSelect = table.rows('.selected').data();
            console.log("rowsSelect:" + JSON.stringify(rowsSelect));


            //打开面板
            $('#rp_billsDBModal').modal('show');
            $('#rp_recordbillsPanel').hide();


            //加载表格
            loadBillDataTable({
                elementId: 'rp_recordbills',
                dtParams: {
                    dtConfig: 'dtConfigData',
                    data: rowsSelect,
                    columns: [{
                        data: 'recordBillId'
                    }, {
                        data: 'productId',
                    }, {
                        data: 'repairResult',
                    }, {
                        data: 'repairTotalFee',
                    }],
                }
            })

            let subTable = $('#rp_recordbills').DataTable();

            //解绑原事件
            $('#rp_recordbills tbody').unbind();

            //定义子表双击事件
            $('#rp_recordbills tbody').on('click', 'tr', function () {

                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');

                    $('#rp_recordbillsPanel').hide();
                } else {
                    subTable.$('tr.selected').removeClass('selected');
                    $(this).addClass('selected');

                    let rowSelect = subTable.row('.selected').data();
                    //清空Form原有数据
                    initFormInputs({
                        elementId: 'rp_recordbillsForm'
                    })
                    //填写div匹配数据
                    fillDivInputs({
                        elementId: 'rp_recordbills',
                        params: rowSelect
                    })
                    //打开面板
                    $('#rp_recordbillsPanel').show();
                }

            });


        })

        //过滤器
        $('#btnFilter').click(function () {

            //打开面板
            $('#filterModal').modal('show');
        })

        //报表
        $('#btnReports').click(function () {

            //打开面板
            $('#reportsModal').modal('show');
        })



    });
</script>