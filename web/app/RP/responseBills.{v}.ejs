<script type="text/javascript">
    //申请表主表dataTable column 数组

    const mainColumnsArray = [{
            data: 'requestBillId',
        },
        {
            data: 'recordBillId'
        }, {
            data: 'responseBillId'
        }, {
            data: 'customerShortName',
        }, {
            data: 'productId',
        }, {
            data: 'repairResult',
        }, {
            data: 'isSended',
        }, {
            data: 'isFullPay',
        },
    ]

    //申请表子表dataTable column 数组
    const subColumnsArray = [{
        data: 'recordBillId'
    }, {
        data: 'productId',
    }, {
        data: 'repairResult',
    }, {
        data: 'repairTotalFee',
    }]

    //加载主表数据			
    const loadBillMainTable = async () => {
        //加载表格
        loadBillDataTable({
            elementId: 'rp_responsebills',
            sqlParams: {
                sqlId: 'sqlResponseBills',
                params: {
                    filter: 'status ="维修完成" '
                }
            },
            dtParams: {
                columns: mainColumnsArray
            }
        })


    }


    //用数组重载子表
    const loadDataSubTable = async (dataArray) => {

        // console.log('dataArray:' + JSON.stringify(dataArray));


        //加载表格
        loadBillDataTable({
            elementId: 'rp_recordbills',
            dtParams: {
                dtConfig: 'dtConfigData',
                data: dataArray,
                columns: subColumnsArray
            }
        })

        //如数据为0,清空tbody 避免直接获取size =1;
        if (dataArray.length === 0) {
            $('#rp_recordbills tbody').html("");
        }

        // //添加子表双击事件
        // addSubTableListener();
    }

    //检查需要出货的选中数据是否符合规范
    const checkSendData = (arr) => {
        switch (true) {
            case arr.length === 0:
                alert('未选中出货单据!')
                return false
                break;
            case arr.length > 0:
                for (const n of arr) {
                    if (n.responseBillId) {
                        alert('选中数据中存在已出货单据,不可重复出货,请检查!')
                        return false
                        break;
                    }
                }
                break;
        }

        return true;
    }

    //检查查看详情数据
    const checkDetailData = (obj) => {
        switch (true) {
            case !obj:
                alert('未选中数据行!')
                return false;
                break;
            case !obj.responseBillId:
                alert('不存在匹配出货单,请先出货!')
                return false;
                break;
        }


        return true;
    }


    //创建出货单单新单号
    const createResponseBillId = async () => {
        let r1 = await getDataBySql({
            sql: "getResponseBillsNum",
            params: {
                filter: 'makeDate="' + currentDate() + '"'
            }
        })
        // console.log('r1:' + r1);
        let r2 = r1[0].billsNum
        let r3 = parseInt(r2) + 1;

        let r4 = PrefixInteger(r3, 3);
        // console.log('r4:' + r4);
        let r5 = dateFormat(currentDate(), 'yyyyMMdd');

        let billId = 'S-' + r5 + r4;
        $("#rp_responsebillsForm-responseBillId").text(billId);
    }


    //添加子表监听器,定义双击展开事件
    const addSubTableListener = () => {
        let subTable = $('#rp_recordbills').DataTable();

        //解绑原事件
        $('#rp_recordbills tbody').unbind();

        //定义子表双击事件
        $('#rp_recordbills tbody').on('click', 'tr', async function () {

            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
                $('#rp_recordbillsPanel').hide();
            } else {
                subTable.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');

                let rowSelect = subTable.row('.selected').data();
                console.log("rowSelect:" + JSON.stringify(rowSelect));

                //初始化并填写form内inputs
                initAndFillFormInputs({
                    formId: 'rp_recordbillsForm',
                    params: rowSelect
                })


                //打开面板
                $('#rp_recordbillsPanel').show();

            }

        });
    }

    //检查需求单Id函数,防止多人同时填单时出现的覆盖问题

    const checkResponseBillId = async () => {
        let billId = $("#rp_responsebillsForm-responseBillId").text();

        let r1 = await getDataBySql({
            sql: 'getResponseBillsNum',
            params: {
                filter: 'responseBillId="' + billId + '"'
            }
        })

        let r2 = r1[0].billsNum;
        console.log("checkResponseBillId:" + r2);

        let o = r2 > 0 ? false : true;
        return o;

    }


    //更新出货单号加1
    const updateResponseBillId = () => {
        let billId = $("#rp_responsebillsForm-responseBillId").text();
        if (billId) {
            billIdArr = billId.split('-');
            let newBillId = billIdArr[0] + '-' + (parseInt(billIdArr[1]) + 1);
            $("#rp_responsebillsForm-responseBillId").text(newBillId);
        }
    }


    //递归更新单号直到不存在冲突单号;

    const autoUpdateResponseBillId = async () => {
        let r = await checkResponseBillId();
        if (r) {
            return true
        } else {
            console.log('fail:' + $("#rp_responsebillsForm-responseBillId").text());
            updateResponseBillId()
            console.log('fail11:' + $("#responsebillsForm-responseBillId").text());
            return await autoUpdateResponseBillId();
        }
    }


    //添加主表监听器,定义双击打开事件
    const addMainTableListener = () => {
        //定义主表双击事件
        $('#rp_responsebills tbody').on('dblclick', 'tr', async function () {
            //设定选中
            let table = $('#rp_responsebills').DataTable();
            table.$('tr.selected').removeClass('selected');
            $(this).addClass('selected');
            let dataSelect = table.row('.selected').data();
            $('#btnDetail').click();
        });

    }

    //根据客户ID填写匹配数据至出货单
    const fillCustomerInfo = async (customerId) => {
        let customerData = await getDataBySql({
            sql: 'getCustomers',
            params: {
                filter: 'customerId="' + customerId + '"'
            }
        })

        //去掉customerData中的DBID 避免重复错误;
        delete customerData[0].DBID;
        console.log("customerData:" + JSON.stringify(customerData));

        if (customerData.length > 0) {
            fillFormInputs({
                formId: 'rp_responsebillsForm',
                params: customerData[0]
            })
        }

    }



    $(document).ready(function () {

        //元素数据

        //元素数据-全局变量-当前用户名
        sessionName = "<%-locals.session.yjUser.Name%>";

        //定义子表全局变量临时数据数组
        subTableData = [];

        //元素数据-主表
        loadBillMainTable();



        //定义功能
        //定义功能-出货按钮
        $('#btnSend').click(function () {

            //定义变量
            let table = $('#rp_responsebills').DataTable();
            let dataSelect = table.rows('.selected').data();

            subTableData = tableDataToArray(dataSelect);
            console.log("subTableData:" + JSON.stringify(subTableData));

            //检查出货条件
            let r = checkSendData(subTableData);
            if (!r) {
                table.$('tr.selected').removeClass('selected');
                return;
            }

            //打开详情面板,关闭子面板
            $('#rp_responsebillsModal').modal('show');
            $('#rp_recordbillsPanel').hide();

