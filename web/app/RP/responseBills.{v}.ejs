            sqlParams: {
                sql: 'getOptionSelector',
                params: {
                    filter: 'optionClass="币别"',
                    orderBy: 'orderId'
                }
            },
        })

        loadBootStrapSelector({
            elementId: 'rp_responsebillsForm-paymentWay',
            sqlParams: {
                sql: 'getOptionSelector',
                params: {
                    filter: 'optionClass="收款方式"',
                    orderBy: 'orderId'
                }
            },
        })

        loadBootStrapSelector({
            elementId: 'rp_responsebillsForm-sendWay',
            sqlParams: {
                sql: 'getOptionSelector',
                params: {
                    filter: 'optionClass="出货方式"',
                    orderBy: 'orderId'
                }
            },
        })

        loadBootStrapSelector({
            elementId: 'rp_responsebillsForm-expressCompany',
            sqlParams: {
                sql: 'getOptionSelector',
                params: {
                    filter: 'optionClass="快递公司"',
                    orderBy: 'orderId'
                }
            },
        })

        loadBootStrapSelector({
            elementId: 'rp_responsebillsForm-payWay',
            sqlParams: {
                sql: 'getOptionSelector',
                params: {
                    filter: 'optionClass="付款方式"',
                    orderBy: 'orderId'
                }
            },
        })




        //定义主表双击功能
        addMainTableListener();


        // 关闭事件重置选中datatable选中,避免显示错误
        $('#rp_responsebillsModal').on('hidden.bs.modal', function () {
            let table = $('#rp_responsebills').DataTable();
            table.$('tr.selected').removeClass('selected');
        })


    });
