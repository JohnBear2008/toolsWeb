            addSubTableListener();

        })

        //定义功能-主表双击


        //定义功能-保存单据按钮
        $('#rp_responsebillsSave').click(async function () {

            let mainFormData = getPostFormData({
                formId: 'rp_responsebillsForm'
            })

            //判断出货状态
            if (mainFormData.data[0].sendWay) {
                mainFormData.data[0].isSended = '已出货'
                if (mainFormData.data[0].sendWay === '快递' && !mainFormData.data[0].expressId) {
                    mainFormData.data[0].isSended = '待填单'
                }
            }

            //判断结款状态

            if (mainFormData.data[0].payAmount >= mainFormData.data[0].amount) {
                mainFormData.data[0].isFullPay = '已结清'
            } else {
                mainFormData.data[0].isFullPay = '未结清'
            }

            // console.log('mainFormData111:'+JSON.stringify(mainFormData));

            //添加申请单id,方便历史单据模块索引
            let requestBillId = subTableData[0].requestBillId;
            mainFormData.data[0].requestBillId = requestBillId;

            // let recordBillId=subTableData[0].recordBillId;
            // mainFormData.data[0].recordBillId = recordBillId;



            //给主表数据添加,maker 和makeDate时间;新增状态等待单号检测完成,制单人为空则为新增状态
            if (!mainFormData.data[0].maker) { //新增保存
                await autoUpdateResponseBillId();
                mainFormData.data[0].maker = sessionName;
                mainFormData.data[0].makeDate = currentDate();



                let r1 = await postDBData({
                    sql: 'replace',
                    params: mainFormData
                })

                let responseBillId = $('#rp_responsebillsForm-responseBillId').text();

                let updateArr = [];

                for (const n of subTableData) {
                    updateArr.push({
                        recordBillId: n.recordBillId,
                        responseBillId: responseBillId
                    })
                }

                let r2 = await postDBData({
                    sql: 'update',
                    params: {
                        tableId: 'rp_recordbills',
                        data: updateArr,
                        key:'recordBillId'
                    }
                })

                if (r1.affectedRows && r2.affectedRows) {
                    alert('保存成功!')
                    $('#rp_responsebillsModal').modal('hide');
                    loadBillMainTable();
                } else {
                    alert('出现错误!')
                }
            } else { //普通保存

                let r3 = await postDBData({
                    sql: 'replace',
                    params: mainFormData
                })

                if (r3.affectedRows) {
                    alert('保存成功!')
                    $('#rp_responsebillsModal').modal('hide');
                    loadBillMainTable();
                } else {
                    alert('出现错误!')
                }

            }

        })

        //初始化组件
        loadDatePicker({
            elementId: "rp_responsebillsForm-responseDate",
        })

        //初始化组件
        loadDatePicker({
            elementId: "rp_responsebillsForm-payDate",
        })


