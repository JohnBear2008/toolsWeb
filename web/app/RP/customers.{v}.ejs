        </div>
    </div>


    <!-- 模态框（Modal） -->
    <div class="modal fade" id="rp_customersModal" tabindex="-1" role="dialog" aria-hidden="true"
        data-backdrop="static">
        <div class="modal-dialog" style="width: 70%;">
            <!-- 按钮触发模态框 -->
            <button class="btn btn-primary" data-toggle="modal" data-target="#rp_customersModal"
                id="rp_customersModalOpen" style="display: none;">
                开始演示模态框
            </button>
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">
                        客户信息
                    </h4>
                </div>
                <div class="modal-body">

                    <!-- 表单面板 -->
                    <div class="panel panel-default">
                        <div class="panel-body" style="min-height: 750px;">


                            <form class="form-horizontal" role="form" id='rp_customersForm'>

                                <!-- <input id="rp_customersForm-DBID" type="hidden" value=""> -->

                                <div class="form-group">
                                    <label class="col-sm-1 control-label">客户编号</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="rp_customersForm-customerId" type="text"
                                            value="">
                                    </div>

                                    <label class="col-sm-1 control-label">简称</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="rp_customersForm-customerShortName" type="text"
                                            value="">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-1 control-label">公司名称</label>
                                    <div class="col-sm-11">
                                        <input class="form-control" id="rp_customersForm-customerName" type="text"
                                            value="">
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="col-sm-1 control-label">客户类型</label>
                                    <div class="col-sm-5">
                                        <!-- <input class="form-control" id="rp_customersForm-customerType" type="text"
                                            value=""> -->
                                        <select id="rp_customersForm-customerType" class="selectpicker form-control">
                                        </select>
                                    </div>

                                    <label class="col-sm-1 control-label">客户归属</label>
                                    <div class="col-sm-5">
                                        <!-- <input class="form-control" id="rp_customersForm-customerBelongShort"
                                            type="text" value=""> -->
                                        <select id="rp_customersForm-customerBelongShort"
                                            class="selectpicker form-control" data-live-search="true" data-size="10">
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-1 control-label">收款方式</label>
                                    <div class="col-sm-5">

                                        <select id="rp_customersForm-paymentType" class="selectpicker form-control">
                                        </select>
                                    </div>

                                    <label class="col-sm-1 control-label">保固期</label>
                                    <div class="col-sm-5">

                                        <select id="rp_customersForm-warrantyPeriod" class="selectpicker form-control">
                                        </select>
                                    </div>

                                </div>

                                <div class="form-group">
                                    <label class="col-sm-1 control-label">国内外</label>
                                    <div class="col-sm-5">
                                        <select id="rp_customersForm-isInland" class="selectpicker form-control">
                                        </select>
                                    </div>

                                    <label class="col-sm-1 control-label">客户区域</label>
                                    <div class="col-sm-5">
                                        <select id="rp_customersForm-customerArea" class="selectpicker form-control"
                                            data-live-search="true" data-size="10">
                                        </select>
                                    </div>



                                </div>

                                <div class="form-group">
                                    <label class="col-sm-1 control-label">地址</label>
                                    <div class="col-sm-11">
                                        <input class="form-control" id="rp_customersForm-address" type="text" value="">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-sm-1 control-label">联系人</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="rp_customersForm-contact" type="text" value="">
                                    </div>

                                    <label class="col-sm-1 control-label">手机号</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="rp_customersForm-mobilePhone" type="text"
