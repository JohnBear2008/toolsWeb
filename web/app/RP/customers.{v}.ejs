<!-- 定义html元素 -->
<div class="rpContent">

    <!-- 按钮：用于打开模态框 -->

    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="page-header">
                <h1>基础信息-客户</h1>
            </div>
        </div>
    </div>

    <div>
        <button type="button" style="display: none;" id="rp_customersNew">
            新增
        </button>
    </div>


    <div class="row clearfix">
        <div class="col-md-12 column">

            <!-- 定义基础模块数据表 -->
            <table id="rp_customers" class=" table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>编号</th>
                        <th>简称</th>
                        <th>地址</th>
                        <th>客户类型</th>
                        <th>联系人</th>
