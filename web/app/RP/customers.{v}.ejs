    //添加主表监听器,定义双击打开事件

    const addMainTableListener = () => {
        //定义主表双击事件
        $('#rp_customers tbody').on('dblclick', 'tr', function () {

            //设定选中
            let table = $('#rp_customers').DataTable();
            table.$('tr.selected').removeClass('selected');
            $(this).addClass('selected');
            let dataSelect = table.row('.selected').data();

            //初始化并填写form内inputs
            initAndFillFormInputs({
                formId: 'rp_customersForm',
                params: dataSelect
            })

            //打开面板
            $('#rp_customersModal').modal('show');

        });
    }
    //主表加载数据函数;
    const loadBillMainTable = async () => {
        //初始化主表
        loadBillDataTable({
            elementId: 'rp_customers',
            sqlParams: {
                sqlId: 'sqlTableSelect',
                params: {
                    tableId: 'rp_customers',
                    orderBy: 'saveTimeStamp desc'
                }
            },
            dtParams: mainDtParams
        })
    }


    //新增客户 
    const addCustomer = async () => {
        clearFormInputs({
            formId: 'rp_customersForm'
        })

        //设置初始值
        $('#rp_customersForm-customerType').selectpicker('val', '客户');
        $('#rp_customersForm-paymentType').selectpicker('val', '款到发货');
        $('#rp_customersForm-creditRank').selectpicker('val', '正常');
        $('#rp_customersForm-effective').selectpicker('val', '是');
        $('#rp_customersForm-isSystemOption').text('否');


        //打开面板
        $('#rp_customersModalOpen').click();

    }


    const deleteCustomer = async () => {

        //check-选中检查
        let table = $('#rp_customers').DataTable();
        let rowsSelect = table.rows('.selected').data();
        console.log('rowsSelect', rowsSelect);

        if (rowsSelect.length === 0) {
            alert('请先选中需要删除的客户')
            return
        }

        //check-系统客户是否包含检查
        for (let i = 0; i < rowsSelect.length; i++) {
            if (rowsSelect[i].isSystemOption === '是') {
                alert('选中客户中包含系统客户,无法删除')
                return
            }
        }

        //do-删除客户
        let DBIDArr = []
        for (let i = 0; i < rowsSelect.length; i++) {
            DBIDArr.push(rowsSelect[i].DBID)
        }

        let r1 = await postDBData({
            sql: 'delete',
            params: {
                tableId: 'rp_customers',
                data: DBIDArr
            }
        })

        //return-结果提醒
        if (r1.affectedRows > 0) {
            alert('删除成功')
        } else {
            alert('出现错误')
        }
        //return-重载表格
        // loadBillMainTable();
        MainTable.ajax.reload()

    }

    //检查可能重复发客户
    const checkDuplicateCustomer = async () => {

        let customerShortName = $('#rp_customersForm-customerShortName').val();
        let customerName = $('#rp_customersForm-customerName').val();
        let contact = $('#rp_customersForm-contact').val();
        let mobilePhone = $('#rp_customersForm-mobilePhone').val();
        let workPhone = $('#rp_customersForm-workPhone').val();

        let filter = "";
        if (customerShortName) {
            filter = filter + ' or customerShortName="' + customerShortName + '"';
        }
        if (customerName) {
            filter = filter + ' or customerName="' + customerName + '"';
        }
        if (contact) {
            filter = filter + ' or contact="' + contact + '"';
        }
        if (mobilePhone) {
            filter = filter + ' or mobilePhone="' + mobilePhone + '"';
        }
        if (workPhone) {
            filter = filter + ' or workPhone="' + workPhone + '"';
        }

        if (filter) {
            filter = filter.substring(3, filter.length)
        }


        let rs = await getDataBySql({
            sql: 'getCustomers',
            params: {
                filter: filter
            }
        })

        console.log('checkDuplicateCustomer', rs);
        return rs


    }



    //保存客户
    const saveCustomer = async () => {
        //检查是否为系统客户
        if ($('#rp_customersForm-isSystemOption').text() === '是') {
            alert('系统客户不允许修改!')
            return
        }

        //检查保存条件
        if (!$('#rp_customersForm-customerId').val()) {
            alert('客户编号未填!')
            return
        }


        //检查保存条件
        if ($('#rp_customersForm-creditRank option:selected').val() === '黑名单' &&
            $('#rp_customersForm-remark').val() === '') {
            alert('顾客设为黑名单,必须在备注中注明原因!')
            return
        }

        //校验重复数据
        let duplicateRows = await checkDuplicateCustomer();
        if (duplicateRows.length > 0) {
            let duplicateIds = '';
            for (const row of duplicateRows) {
                duplicateIds = duplicateIds + row.customerId + ',';
            }
            duplicateIds = duplicateIds.substring(0, duplicateIds.length - 1);
            if (!confirm('检测到可能和以下客户编号:' + duplicateIds + ' 包含重复信息,是否继续')) {
                return
            }
        }

        let mainFormData = getPostFormData({
            formId: 'rp_customersForm'
        })

        //自动补齐多联系人
        if (!mainFormData.data[0].contacts && mainFormData.data[0].contact) {
            if (mainFormData.data[0].contacts.indexOf(mainFormData.data[0].contact) === -1) {
                mainFormData.data[0].contacts = mainFormData.data[0].contact + ',' +
                    mainFormData.data[0].mobilePhone + ';'
            }
        }

        //调整contacts内的标点符号
        if (mainFormData.data[0].contacts) {
            mainFormData.data[0].contacts = cn2enPunctuation(mainFormData.data[0].contacts)
        }


        //有备注时记录备注人
        if (mainFormData.data[0].remark) {
            mainFormData.data[0].remarker = sessionName
        }

        console.log('mainFormData:' + JSON.stringify(mainFormData));

        let r1 = await postDBData({
            sql: 'replace',
            params: mainFormData
        })

        if (r1.affectedRows > 0) {
            alert('保存成功!')

            // $('#rp_customersModal').modal('hide');多层modal存在失效问题,改用click关闭
            $('#rp_customersModalClose').click()

            // loadBillMainTable();
            MainTable.ajax.reload()
        } else {
            alert('出现错误!')
        }

    }

    //区域监听器
    const addCustomerAreaListener = () => {
        $('#rp_customersForm-customerArea').unbind();
        $('#rp_customersForm-customerArea').change(function () {
            let customerArea = $('#rp_customersForm-customerArea option:selected').val();
            $('#rp_customersForm-customerArea').selectpicker('refresh');
            if (customerArea) {
                let customerAreaText = customerArea.replace(/-/g, '')
                let address = $('#rp_customersForm-address').val()
                if (address.indexOf('customerAreaText') === -1) {
                    $('#rp_customersForm-address').val(customerAreaText + address);
                }
            }
        });
    }

    const syncErpData = async () => {
        let T9Data = await getT9Data({
            to: 'RP',
            type: 'customer',

        })
        console.log('T9Data', T9Data);

        let MainTableData = MainTable.rows().data();
        let RPData = []
        let newRPData = []
        for (let i = 0; i < MainTableData.length; i++) {
            RPData.push(MainTableData[i]);

        }
        console.log('RPData', RPData);

        for (const n of T9Data) {
            let match = false
            for (let m of RPData) {
                if (m.customerName === n.customerName) {
                    match = true

                    let updated = false;

                    for (const p in m) {
                        if (RPData.hasOwnProperty.call(m, p) && RPData.hasOwnProperty.call(n, p) && !m[p] && n[
                                p]) {
                            m[p] = n[p]
                            console.log(m);
                            updated = true;
                        }
                    }

                    if (updated) {
                        newRPData.push(m)
                    }
                    break;
                }
            }

            //不存在的物料如何处理,预留
            if (!match) {
                newRPData.push(n)
            }
        }
        console.log('newRPData', newRPData);

        if (newRPData.length === 0) {
            alert('未检测到新数据');
            return
        }



        let r1 = await postDBData({
            sql: 'replace',
            params: {
                tableId: 'rp_customers',
                data: newRPData,
            }
        })

        console.log('r1', r1);
        if (r1.affectedRows > 0) {
            MainTable.ajax.reload()
            alert('同步完成,更新' + r1.affectedRows + '条新数据!')
        }
    }

