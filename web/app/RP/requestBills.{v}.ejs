        $('#rp_recordbillsForm-productId').change(function () {
            let productId = $('#rp_recordbillsForm-productId option:selected')
                .val()
            if (productId) {
                fillProductInfo(productId);
            }
        });

    }

    //创建申请单新单号
    const createRequestBillId = async () => {
        let r1 = await getDataBySql({
            sql: "getReqeustBillsNum",
            params: {
                filter: 'makeDate="' + currentDate() + '"'
            }
        })
        // console.log('r1:' + r1);
        let r2 = r1[0].billsNum
        let r3 = parseInt(r2) + 1;

        let r4 = PrefixInteger(r3, 3);
        // console.log('r4:' + r4);
        let r5 = dateFormat(currentDate(), 'yyyyMMdd');

        let billId = 'AA-' + r5 + r4;
        $("#rp_requestbillsForm-requestBillId").text(billId);
    }



    //添加主表监听器,定义双击打开事件

    const addMainTableListener = () => {


        //定义主表双击事件
        $('#rp_requestbills tbody').on('dblclick', 'tr', function () {

            //设定选中
            let table = $('#rp_requestbills').DataTable();
            table.$('tr.selected').removeClass('selected');
            $(this).addClass('selected');
            let dataSelect = table.row('.selected').data();

            //打开面板
            $('#rp_requestbillsModal').modal('show');

            //打开关联信息
            $("#accordion").show();

            //初始化并填写form内inputs
            initAndFillFormInputs({
                formId: 'rp_requestbillsForm',
                params: dataSelect
            })

            //关闭子表panel
            $('#rp_recordbillsPanel').hide();

            //加载子表记录表数据

            loadBillSubTable(dataSelect.requestBillId);

            // //客户选定监听事件
            // addCustomerListener();

        });

    }

    //主表加载数据函数;

    const loadBillMainTable = async () => {
        //初始化主表
        loadBillDataTable({
            elementId: 'rp_requestbills',
            sqlParams: {
                sqlId: 'sqlRequestBills',
                params: {
                    orderBy: 'billSaveTimeStamp desc'
                }
            },
            dtParams: {
                columns: mainColumnsArray
            }
        })

        addMainTableListener();
    }

    //添加子表监听器,定义双击展开事件
    const addSubTableListener = () => {
        let subTable = $('#rp_recordbills').DataTable();

        //解绑原事件
        $('#rp_recordbills tbody').unbind();

        //定义子表双击事件
        $('#rp_recordbills tbody').on('click', 'tr', function () {

            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');

