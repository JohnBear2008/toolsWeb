<!-- 加载foil外框架 -->
<% layout(locals.global.theme_layout_dir+'/master.ejs') -%>

<!-- 定义html元素 -->
<div class="rpContent">

    <!-- 按钮：用于打开模态框 -->

    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="page-header">
                <h1>工作流程-维修申请单</h1>
            </div>
        </div>
    </div>



    <div class="row clearfix">
        <div class="col-md-12 column">


            <!-- 定义基础模块数据表 -->
            <table id="rp_requestbills" class=" table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>申请单编号</th>
                        <th>送修时间</th>
                        <th>客户编号</th>
                        <th>客户简称</th>
                        <th>区域</th>
                        <th>国内外</th>
                        <th>送修人</th>
                        <th>送修方式</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>


        </div>
    </div>





    <!-- 模态框（Modal） -->
    <div class="modal fade" id="rp_requestbillsModal" tabindex="-1" role="dialog" aria-hidden="true">

        <div class="modal-dialog" style="width: 65%;">

            <!-- 按钮触发模态框 -->
            <button class="btn btn-primary" data-toggle="modal" data-target="#rp_requestbillsModal"
                id="rp_requestbillsModalOpen" style="display: none;">
                开始演示模态框
            </button>
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title">
                        表单详情
                    </h4>


                </div>
                <div class="modal-body">




                    <!-- 表单面板 -->
                    <div class="panel panel-default">
                        <div class="panel-body">


                            <form class="form-horizontal" role="form" id='rp_requestbillsForm'>

                                <input id="rp_requestbillsForm-DBID" type="hidden" value="">

                                <div class="form-group">
                                    <label class="col-sm-1 control-label">申请单编号</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="rp_requestbillsForm-requestBillId" type="text"
                                            value="该输入框获得焦点...">
                                    </div>

                                    <label class="col-sm-1 control-label">送修时间</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="rp_requestbillsForm-requestDate" type="text"
                                            value="该输入框获得焦点...">
                                    </div>

                                </div>




                                <div class="form-group">
                                    <label class="col-sm-1 control-label">客户编号</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="rp_requestbillsForm-customerId" type="text"
                                            value="该输入框获得焦点...">
                                    </div>

                                    <label class="col-sm-1 control-label">客户简称</label>
                                    <div class="col-sm-5">
                                        <input class="form-control" id="rp_requestbillsForm-shortName" type="text"
                                            value="该输入框获得焦点...">
                                    </div>


                                </div>


                            </form>

                            <!-- 子表 -->

                            <div class="row clearfix">
                                <div class="col-md-12 column">

                                    <!-- 功能组按钮 -->
                                    <div class="well sm"><button id='btnScan' type="button"
                                            class="btn btn-info">扫描填单</button></div>


                                    <!-- 扫描模态框（Modal） -->
                                    <div class="modal fade" id="scanModal">
                                        <div class="modal-dialog" style="width: 675px;">
                                            <div class="modal-content">

                                                <div class="modal-body">请将产品二维码放置于摄像头内
                                                    <div><button id='btnScanStop' type="button"
                                                            class="btn btn-info">停止扫描</button></div>
                                                    <div style="width:640;height:480px"><video id="preview"></video>
                                                    </div>

                                                </div>



                                            </div>
                                        </div>
                                    </div>






                                    <!-- 定义基础模块数据表 -->
                                    <table id="rp_recordbills" class=" table table-striped table-bordered"
                                        style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>申请单号</th>
                                                <th>产品编号</th>
                                                <th>产品描述</th>
                                                <th>故障描述</th>
                                                <th>是否返修</th>
                                                <th>是否紧急</th>
                                                <th>质保期内</th>


                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>

                                    <div class="panel panel-default" id='rp_recordbillsPanel'>
                                        <div class="panel-heading">
                                            <h3 class="panel-title">产品详情</h3>
                                        </div>
                                        <div class="panel-body">


                                            <form class="form-horizontal" role="form" id='rp_recordbillsForm'>

                                                <input id="rp_recordbillsForm-DBID" type="hidden" value="">
                                                <input id="rp_recordbillsForm-requestBillId" type="hidden" value="">


                                                <div class="form-group">
                                                    <label class="col-sm-1 control-label">产品编号</label>
                                                    <div class="col-sm-5">
                                                        <input class="form-control" id="rp_recordbillsForm-productId"
                                                            type="text" value="该输入框获得焦点...">
                                                    </div>

                                                    <label class="col-sm-1 control-label">产品描述</label>
                                                    <div class="col-sm-5">
                                                        <input class="form-control"
                                                            id="rp_recordbillsForm-productDescription" type="text"
                                                            value="该输入框获得焦点...">
                                                    </div>

                                                </div>




                                                <div class="form-group">
                                                    <label class="col-sm-1 control-label">故障描述</label>
                                                    <div class="col-sm-5">
                                                        <input class="form-control"
                                                            id="rp_recordbillsForm-faultDescription" type="text"
                                                            value="该输入框获得焦点...">
                                                    </div>

                                                    <label class="col-sm-1 control-label">是否返修</label>
                                                    <div class="col-sm-5">
                                                        <input class="form-control" id="rp_recordbillsForm-isRework"
                                                            type="text" value="该输入框获得焦点...">
                                                    </div>


                                                </div>


                                            </form>


                                        </div>
                                    </div>



                                </div>
                            </div>




                        </div>
                    </div>



                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="rp_requestbillsModalClose">关闭
                    </button>
                    <button type="button" class="btn btn-primary" id="rp_requestbillsSave">
                        保存
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>


</div>







<script type="text/javascript">
    $(document).ready(function () {


        //加载表格
        loadDataTable({
            elementId: 'rp_requestbills',
            sqlParams: {
                tableId: 'rp_requestbills',
                filter: ''
            },
            dtParams: {
                columns: [{
                    data: 'requestBillId',
                    visable: 'false'
                },
                {
                    data: 'requestDate'
                }, {
                    data: 'customerId'
                }, {
                    data: 'shortName',
                }, {
                    data: 'customerArea',
                }, {
                    data: 'isInland',
                }, {
                    data: 'requestStaff',
                }, {
                    data: 'requestWay',
                }
                ],
            }
        })

        let table = $('#rp_requestbills').DataTable();



        //id选择器选中modal框
        $('#rp_requestbillsModal').on('show.bs.modal', function () {

            let dataSelect = table.row('.selected').data();

            let filter = ''

            let requestBillId = $('#rp_requestbillsForm-requestBillId').val();


            if (dataSelect !== undefined) {
                // console.log("dataSelect:" + JSON.stringify(dataSelect));

                let requestBillId = dataSelect.requestBillId;
                filter = 'requestBillId="' + requestBillId + '"';
            } else {
                filter = 'requestBillId=""';
            }

            loadSubDataTable({
                elementId: 'rp_recordbills',
                sqlParams: {
                    tableId: 'rp_recordbills',
                    filter: filter
                },
                dtParams: {
                    columns: [{
                        data: 'requestBillId',
                        visible: false
                    }, {
                        data: 'productId'
                    },
                    {
                        data: 'productDescription'
                    }, {
                        data: 'faultDescription'
                    }, {
                        data: 'isRework',
                    }, {
                        data: 'urgent',
                    }, {
                        data: 'inWarranty',
                    }
                    ],
                },
                params: {
                    fixInitValues: {
                        requestBillId: requestBillId
                    }
                }
            })



        })

        // 扫描按钮
        $('#btnScan').click(function () {
            $('#scanModal').modal('show');
            let scanner = new Instascan.Scanner({
                video: document.getElementById('preview')
            });
            scanner.addListener('scan', function (content) {
                console.log('content:' + content);
                // alert('content:' + content);
                $('#rp_recordbillsPanel').show();


                fillDivInputs({ elementId: 'rp_recordbills', params: JSON.parse(content) })


                scanner.stop().then(function () {
                    // alert('stoped');
                    $('#scanModal').modal('hide')
                });
            });
            Instascan.Camera.getCameras().then(function (cameras) {
                if (cameras.length > 0) {
                    scanner.start(cameras[0]).then(function () {
                        // alert('start');
                    }).catch(function (err) {
                        alert('err:' + err);
                    });
                } else {
                    console.error('No cameras found.');

                }
            }).catch(function (e) {
                console.error(e);
                alert("系统错误,请检查摄像头设备!")

            });
        })

        // 停止扫描
        $('#btnScanStop').click(function () {
            $('#scanModal').modal('hide')
        })






    });
</script>